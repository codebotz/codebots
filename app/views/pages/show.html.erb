<% if @posts.size>0%>
<div class="row marketing">
<% @posts.each do |post| %>
  <div class="col-lg-6">
    <div class="panel panel-primary">
      <!-- Default panel contents -->
      <div class="panel-heading">
      <% if usuario_signed_in? %>
              <% if post.usuario_id == current_usuario.id %>
              <div class="row container-fluid">
                <div class="pull-right">
                  <div class="dropdown">
                      <i class="fa fa-cogs  dropdown-toggle" id="post-actions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"">
                        <span class="caret"></span>
                      </i>
                    <ul class="dropdown-menu post-actions" aria-labelledby="post-actions">
                      <li>                              
                        <%= link_to edit_post_path(post) do%> 
                          <i class="fa fa-pencil"> Editar</i>
                        <% end %>
                      </li>
                      <!--li role="separator" class="divider"></li-->
                      <li>                              
                        <%= link_to post, method: :delete, data: {confirm: "¿Estás seguro de borrar este post?"} do %>
                          <i class="fa fa-trash"> Eliminar</i>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </div>            
              </div>
              <% end %>
          <% end %>
          <div class="row container-fluid post">
            <%= link_to post do%>
              <h4><%= post.titulo %></h4>
            <% end %>
            <br>
              <div class="pull-left">
                Hace <%= time_ago_in_words(post.created_at) %> por <%= link_to "/#{post.usuario.nickname}" do%>
                <%= post.usuario.nombre_completo%>
                <% end %>
              </div>  
          </div>
      </div>
      <div class="panel-body">
        <p><%= truncate(post.contenido.html_safe, :length => 250) %></p>
          <% if (post.contenido.length > 250) %>
            <%= link_to "Ver más", post%>
          <% end %>
      </div>
      <div class="panel-footer">
      <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> Me gusta</a>

      <% if !post.likes.nil? %>
        <% if post.likes > 0 %>
          <span class="pull-right"><i class="fa fa-diamond" aria-hidden="true"> <%= post.likes%></i><span>
        <% end %>
      <% end %>
      </div>
	    </div>
	  </div>
	<% end %>
</div>

<% else %>

  <% if @usuario.nickname == current_usuario.nickname %>
    <div class="center">
      <div class="panel panel-primary">
        <div class="panel-body">
          <i class="fa fa-frown-o" aria-hidden="true"></i> Aún no tienes post, crea uno <%= link_to "Crear post", new_post_path, class: "btn btn-primary" %>        
        </div>
      </div>
    </div>
  <% else %>
    <div class="center">
      <div class="panel panel-primary">
        <div class="panel-body">
          <i class="fa fa-frown-o" aria-hidden="true"></i> Este usuario aún no tiene contenido <i class="fa fa-frown-o" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  <% end%>
<%end%>